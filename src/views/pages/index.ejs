<body>
    <div class="app-shell">
        <header class="app-header">
            <div class="header-inner">
                <div class="brand">
                    <div class="brand-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                    <span class="brand-name"><%= title %></span>
                </div>
            </div>
        </header>

        <main class="main-content">
            <div class="container-width">
                
                <!-- CA Status Section -->
                <div class="section mb-8">
                    <% if (!caStatus.initialized) { %>
                        <div class="state-card warning">
                            <div class="state-icon">
                                <i class="bi bi-exclamation-octagon"></i>
                            </div>
                            <div class="state-body">
                                <h3>CA Configuration Required</h3>
                                <p>To generate trusted certificates, you must install the local Certificate Authority.</p>
                                <div class="code-snippet">
                                    <code>mkcert -install</code>
                                    <button type="button" class="copy-btn" onclick="navigator.clipboard.writeText('mkcert -install')" title="Copy">
                                        <i class="bi bi-clipboard"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="state-card success">
                            <div class="state-header">
                                <div class="state-indicator connected">
                                    <span class="dot"></span>
                                    Local CA Active
                                </div>
                                <a href="/download-ca" class="btn btn-secondary btn-sm">
                                    <i class="bi bi-download"></i>
                                    Root Certificate
                                </a>
                            </div>
                            <p class="state-desc">Your system is ready to generate locally trusted certificates.</p>
                        </div>
                    <% } %>
                </div>

                <% if (caStatus.initialized) { %>
                    <!-- Generator Section -->
                    <div class="section mb-8">
                        <form action="/generate-cert" method="POST" class="generate-form">
                            <div class="form-group">
                                <label for="domain">New Certificate</label>
                                <div class="input-wrapper">
                                    <input type="text" id="domain" name="domain" required 
                                           placeholder="e.g. localhost, 127.0.0.1, mysite.local" autocomplete="off">
                                    <button type="submit" class="btn btn-primary">
                                        Generate
                                    </button>
                                </div>
                                <span class="input-hint">Enter a domain name or IP address</span>
                            </div>
                        </form>
                    </div>

                    <!-- Certificates List -->
                    <div class="section">
                        <div class="section-header">
                            <h3>Certificates</h3>
                            <% if (certs && certs.length > 0) { %>
                                <span class="badge"><%= certs.length %></span>
                            <% } %>
                        </div>

                        <% if (certs && certs.length > 0) { %>
                            <div class="cert-grid">
                                <% certs.forEach(cert => { %>
                                    <div class="cert-card">
                                        <div class="cert-main">
                                            <div class="cert-icon">
                                                <i class="bi bi-globe"></i>
                                            </div>
                                            <div class="cert-details">
                                                <span class="cert-name"><%= cert.domain %></span>
                                                <span class="cert-type">Local Certificate</span>
                                            </div>
                                        </div>
                                        <div class="cert-actions">
                                            <div class="btn-group">
                                                <a href="/download-cert/<%= cert.domain %>" class="btn-icon" title="Download CRT">
                                                    <i class="bi bi-file-earmark-check"></i>
                                                    <span class="btn-label">CRT</span>
                                                </a>
                                                <a href="/download-key/<%= cert.domain %>" class="btn-icon" title="Download Key">
                                                    <i class="bi bi-key"></i>
                                                    <span class="btn-label">KEY</span>
                                                </a>
                                            </div>
                                            <div class="divider"></div>
                                            <form action="/delete-cert/<%= cert.domain %>" method="POST" 
                                                  onsubmit="return confirm('Revoke <%= cert.domain %>?');">
                                                <button type="submit" class="btn-icon danger" title="Revoke">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="empty-state">
                                <p>No certificates created yet.</p>
                            </div>
                        <% } %>
                    </div>
                <% } %>
                
            </div>
        </main>
        
        <footer class="app-footer">
            <p>Ready for local development</p>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
    /* Reset & Base */
    :root {
        --bg-body: #FAFAFA;
        --bg-surface: #FFFFFF;
        --border-color: #E4E4E7; /* Zinc 200 */
        --border-hover: #D4D4D8; /* Zinc 300 */
        
        --text-primary: #18181B; /* Zinc 900 */
        --text-secondary: #71717A; /* Zinc 500 */
        --text-tertiary: #A1A1AA; /* Zinc 400 */
        
        --primary: #18181B;
        --primary-hover: #27272A;
        
        --danger: #EF4444;
        --success: #10B981;
        --warning: #F59E0B;
        
        --radius: 8px;
        --radius-sm: 6px;
        
        --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
    }
    
    * { box-sizing: border-box; }
    
    body {
        margin: 0;
        font-family: var(--font-sans);
        background-color: var(--bg-body);
        color: var(--text-primary);
        line-height: 1.5;
        -webkit-font-smoothing: antialiased;
    }
    
    /* Layout */
    .app-shell {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
    
    .container-width {
        width: 100%;
        max-width: 640px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }
    
    /* Header */
    .app-header {
        background: var(--bg-surface);
        border-bottom: 1px solid var(--border-color);
        padding: 1rem 0;
        margin-bottom: 3rem;
    }
    
    .header-inner {
        max-width: 640px;
        margin: 0 auto;
        padding: 0 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .brand-icon {
        width: 32px;
        height: 32px;
        background: var(--primary);
        color: white;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }
    
    .brand-name {
        font-weight: 600;
        font-size: 1rem;
        letter-spacing: -0.01em;
    }
    
    .main-content {
        flex: 1;
    }
    
    .mb-8 { margin-bottom: 2.5rem; }
    
    /* Sections */
    .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem;
    }
    
    .section-header h3 {
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-secondary);
        margin: 0;
    }
    
    .badge {
        background-color: var(--border-color);
        color: var(--text-secondary);
        font-size: 0.75rem;
        padding: 0.125rem 0.5rem;
        border-radius: 99px;
        font-weight: 600;
    }
    
    /* Status Cards */
    .state-card {
        background: var(--bg-surface);
        border: 1px solid var(--border-color);
        border-radius: var(--radius);
        padding: 1.5rem;
        box-shadow: var(--shadow-xs);
    }
    
    .state-card.warning {
        border-left: 4px solid var(--warning);
    }
    
    .state-card.success {
        /* border-left: 4px solid var(--success); */
    }
    
    .state-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }
    
    .state-indicator {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.9375rem;
    }
    
    .dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: var(--success);
        box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
    }
    
    .state-desc {
        color: var(--text-secondary);
        font-size: 0.875rem;
        margin: 0;
    }
    
    .code-snippet {
        background: var(--bg-body);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-sm);
        padding: 0.5rem 0.75rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 1rem;
    }
    
    .code-snippet code {
        font-family: 'SF Mono', 'Monaco', monospace;
        font-size: 0.875rem;
        color: var(--text-primary);
    }
    
    .copy-btn {
        background: none;
        border: none;
        color: var(--text-tertiary);
        cursor: pointer;
        transition: color 0.2s;
    }
    
    .copy-btn:hover { color: var(--text-primary); }
    
    /* Forms */
    .form-group label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .input-wrapper {
        display: flex;
        gap: 0.5rem;
    }
    
    .input-wrapper input {
        flex: 1;
        padding: 0.625rem 0.875rem;
        border: 1px solid var(--border-color);
        border-radius: var(--radius);
        font-family: inherit;
        font-size: 0.9375rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }
    
    .input-wrapper input:focus {
        outline: none;
        border-color: var(--text-tertiary);
        box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
    }
    
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: var(--radius);
        cursor: pointer;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    
    .btn-primary {
        background: var(--primary);
        color: white;
        border: 1px solid var(--primary);
    }
    
    .btn-primary:hover {
        background: var(--primary-hover);
        transform: translateY(-1px);
    }
    
    .btn-secondary {
        background: white;
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
    }
    
    .btn-secondary:hover {
        border-color: var(--border-hover);
        color: var(--text-primary);
        background: var(--bg-body);
    }
    
    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.8125rem;
    }
    
    .input-hint {
        display: block;
        margin-top: 0.5rem;
        font-size: 0.75rem;
        color: var(--text-tertiary);
    }
    
    /* Cert Grid */
    .cert-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
    }
    
    .cert-card {
        background: var(--bg-surface);
        border: 1px solid var(--border-color);
        border-radius: var(--radius);
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: border-color 0.2s;
    }
    
    .cert-card:hover {
        border-color: var(--border-hover);
    }
    
    .cert-main {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .cert-icon {
        width: 40px;
        height: 40px;
        background: var(--bg-body);
        color: var(--text-secondary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.125rem;
    }
    
    .cert-details {
        display: flex;
        flex-direction: column;
    }
    
    .cert-name {
        font-weight: 600;
        font-size: 0.9375rem;
        color: var(--text-primary);
    }
    
    .cert-type {
        font-size: 0.75rem;
        color: var(--text-tertiary);
    }
    
    .cert-actions {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .btn-group {
        display: flex;
        gap: 0.25rem;
    }
    
    .btn-icon {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.375rem 0.625rem;
        color: var(--text-secondary);
        text-decoration: none;
        border-radius: var(--radius-sm);
        font-size: 0.75rem;
        font-weight: 500;
        background: transparent;
        border: none;
        cursor: pointer;
        transition: background 0.2s;
    }
    
    .btn-icon:hover {
        background: var(--bg-body);
        color: var(--text-primary);
    }
    
    .btn-icon.danger:hover {
        background: #FEF2F2;
        color: var(--danger);
    }
    
    .divider {
        width: 1px;
        height: 24px;
        background: var(--border-color);
    }
    
    .empty-state {
        text-align: center;
        padding: 3rem;
        color: var(--text-tertiary);
        border: 1px dashed var(--border-color);
        border-radius: var(--radius);
    }
    
    .app-footer {
        text-align: center;
        padding: 2rem 0;
        font-size: 0.75rem;
        color: var(--text-tertiary);
    }
    
    @media (max-width: 640px) {
        .cert-card {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
        .cert-actions {
            width: 100%;
            justify-content: space-between;
        }
    }
    </style>
</body>
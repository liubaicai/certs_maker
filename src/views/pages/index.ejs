<body>
    <div class="app-container">
        <header class="app-header">
            <div class="header-content">
                <div class="logo">
                    <i class="bi bi-shield-lock-fill"></i>
                    <span><%= title %></span>
                </div>
            </div>
        </header>

        <main class="main-content">
            <div class="container py-4">
                <div class="row justify-content-center">
                    <div class="col-12 col-xl-10">
                        
                        <div class="ca-status">
                            <% if (!caStatus.initialized) { %>
                                <div class="status-card warning">
                                    <div class="status-icon">
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                    </div>
                                    <div class="status-content">
                                        <h2>CA Not Configured</h2>
                                        <p>Your system needs a local Certificate Authority (CA) configuration.</p>
                                        <div class="command-box">
                                            <span class="command-label">Run this command in your terminal:</span>
                                            <code>mkcert -install</code>
                                        </div>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="status-card success">
                                    <div class="status-icon">
                                        <i class="bi bi-check-circle-fill"></i>
                                    </div>
                                    <div class="status-content">
                                        <h2>CA Configured</h2>
                                        <p>Your local Certificate Authority is properly configured.</p>
                                        <div class="status-actions">
                                            <a href="/download-ca" class="btn-download" download>
                                                <i class="bi bi-download"></i>
                                                <span>Download CA Certificate</span>
                                            </a>
                                            <span class="help-text">
                                                <i class="bi bi-info-circle"></i>
                                                Install this certificate to trust all certificates signed by this CA.
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>

                        <% if (caStatus.initialized) { %>
                            <div class="cert-manager">
                                <div class="panel generate-panel">
                                    <div class="panel-header">
                                        <i class="bi bi-plus-circle-fill"></i>
                                        <h2>Generate Certificate</h2>
                                    </div>
                                    <div class="panel-body">
                                        <form action="/generate-cert" method="POST" class="generate-form">
                                            <div class="form-row">
                                                <div class="input-group">
                                                    <label for="domain">Domain or IP</label>
                                                    <input type="text" id="domain" name="domain" required 
                                                           placeholder="example.com or 192.168.1.1">
                                                </div>
                                                <button type="submit" class="btn-generate">
                                                    <i class="bi bi-shield-lock-fill"></i>
                                                    <span>Generate</span>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <div class="panel certs-panel">
                                    <div class="panel-header secondary">
                                        <i class="bi bi-collection-fill"></i>
                                        <h2>Generated Certificates</h2>
                                        <% if (certs && certs.length > 0) { %>
                                            <span class="badge"><%= certs.length %></span>
                                        <% } %>
                                    </div>
                                    <div class="panel-body">
                                        <% if (certs && certs.length > 0) { %>
                                            <div class="cert-list">
                                                <% certs.forEach(cert => { %>
                                                    <div class="cert-item">
                                                        <div class="cert-info">
                                                            <i class="bi bi-globe2"></i>
                                                            <span class="cert-domain"><%= cert.domain %></span>
                                                        </div>
                                                        <div class="cert-actions">
                                                            <a href="/download-cert/<%= cert.domain %>" 
                                                               class="action-btn cert-btn" title="Download Certificate">
                                                                <i class="bi bi-file-earmark-lock2"></i>
                                                                <span>Cert</span>
                                                            </a>
                                                            <a href="/download-key/<%= cert.domain %>" 
                                                               class="action-btn key-btn" title="Download Private Key">
                                                                <i class="bi bi-key-fill"></i>
                                                                <span>Key</span>
                                                            </a>
                                                            <form action="/delete-cert/<%= cert.domain %>" 
                                                                  method="POST" 
                                                                  class="delete-form"
                                                                  onsubmit="return confirm('Delete certificate for <%= cert.domain %>?');">
                                                                <button type="submit" class="action-btn delete-btn" title="Delete">
                                                                    <i class="bi bi-trash3-fill"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                <% }); %>
                                            </div>
                                        <% } else { %>
                                            <div class="empty-state">
                                                <i class="bi bi-inbox"></i>
                                                <p>No certificates generated yet</p>
                                                <span>Create your first certificate above</span>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
    :root {
        --primary: #0ea5e9;
        --primary-light: #38bdf8;
        --primary-dark: #0284c7;
        --primary-bg: #f0f9ff;
        --accent: #06b6d4;
        --success: #10b981;
        --success-light: #d1fae5;
        --warning: #f59e0b;
        --warning-light: #fef3c7;
        --danger: #ef4444;
        --danger-light: #fee2e2;
        --gray-50: #f8fafc;
        --gray-100: #f1f5f9;
        --gray-200: #e2e8f0;
        --gray-300: #cbd5e1;
        --gray-400: #94a3b8;
        --gray-500: #64748b;
        --gray-600: #475569;
        --gray-700: #334155;
        --gray-800: #1e293b;
        --gray-900: #0f172a;
        --radius-sm: 6px;
        --radius: 8px;
        --radius-lg: 12px;
        --shadow-sm: 0 1px 2px rgba(0,0,0,0.06);
        --shadow: 0 4px 6px -1px rgba(0,0,0,0.08), 0 2px 4px -1px rgba(0,0,0,0.04);
        --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.08), 0 4px 6px -2px rgba(0,0,0,0.04);
    }

    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: 'JetBrains Mono', 'SF Mono', 'Fira Code', Consolas, monospace;
        background: var(--gray-900);
        min-height: 100vh;
        color: var(--gray-300);
        -webkit-font-smoothing: antialiased;
    }

    .app-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .app-header {
        background: var(--gray-800);
        padding: 0.875rem 0;
        border-bottom: 1px solid var(--gray-700);
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .header-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--primary-light);
        font-size: 1.25rem;
        font-weight: 600;
        letter-spacing: -0.02em;
    }

    .logo i {
        font-size: 1.375rem;
    }

    .logo span {
        background: linear-gradient(135deg, var(--primary-light) 0%, var(--accent) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .main-content {
        flex: 1;
        padding: 1.5rem 0;
    }

    /* Status Cards */
    .status-card {
        display: flex;
        gap: 1.25rem;
        padding: 1.25rem;
        border-radius: var(--radius);
        margin-bottom: 1.5rem;
        border: 1px solid;
    }

    .status-card.success {
        background: rgba(16, 185, 129, 0.08);
        border-color: rgba(16, 185, 129, 0.25);
    }

    .status-card.warning {
        background: rgba(245, 158, 11, 0.08);
        border-color: rgba(245, 158, 11, 0.25);
    }

    .status-icon {
        width: 44px;
        height: 44px;
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.375rem;
        flex-shrink: 0;
    }

    .status-card.success .status-icon {
        background: rgba(16, 185, 129, 0.15);
        color: var(--success);
    }

    .status-card.warning .status-icon {
        background: rgba(245, 158, 11, 0.15);
        color: var(--warning);
    }

    .status-content h2 {
        margin: 0 0 0.375rem 0;
        font-size: 1rem;
        font-weight: 600;
    }

    .status-card.success .status-content h2 {
        color: var(--success);
    }

    .status-card.warning .status-content h2 {
        color: var(--warning);
    }

    .status-content p {
        margin: 0;
        font-size: 0.85rem;
        color: var(--gray-400);
    }

    .command-box {
        margin-top: 1rem;
        background: var(--gray-900);
        padding: 0.875rem 1rem;
        border-radius: var(--radius-sm);
        border: 1px solid var(--gray-700);
    }

    .command-label {
        display: block;
        font-size: 0.7rem;
        color: var(--gray-500);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .command-box code {
        color: var(--accent);
        font-family: inherit;
        font-size: 0.875rem;
    }

    .status-actions {
        margin-top: 1rem;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 1rem;
    }

    .btn-download {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.875rem;
        background: var(--success);
        color: var(--gray-900);
        border-radius: var(--radius-sm);
        text-decoration: none;
        font-size: 0.8rem;
        font-weight: 600;
        transition: all 0.15s ease;
    }

    .btn-download:hover {
        background: #34d399;
        color: var(--gray-900);
    }

    .help-text {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        font-size: 0.75rem;
        color: var(--gray-500);
    }

    /* Panels */
    .panel {
        background: var(--gray-800);
        border-radius: var(--radius);
        overflow: hidden;
        margin-bottom: 1.5rem;
        border: 1px solid var(--gray-700);
    }

    .panel-header {
        display: flex;
        align-items: center;
        gap: 0.625rem;
        padding: 0.875rem 1.125rem;
        background: var(--gray-800);
        color: var(--primary-light);
        border-bottom: 1px solid var(--gray-700);
    }

    .panel-header.secondary {
        color: var(--gray-300);
    }

    .panel-header i {
        font-size: 1rem;
        opacity: 0.9;
    }

    .panel-header h2 {
        margin: 0;
        font-size: 0.9rem;
        font-weight: 600;
        letter-spacing: -0.01em;
    }

    .panel-header .badge {
        margin-left: auto;
        background: var(--primary);
        color: white;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: 600;
    }

    .panel-body {
        padding: 1.125rem;
    }

    /* Generate Form */
    .form-row {
        display: flex;
        gap: 0.875rem;
        align-items: flex-end;
    }

    .input-group {
        flex: 1;
        max-width: 340px;
    }

    .input-group label {
        display: block;
        font-size: 0.7rem;
        font-weight: 500;
        color: var(--gray-400);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .input-group input {
        width: 100%;
        padding: 0.625rem 0.875rem;
        border: 1px solid var(--gray-600);
        border-radius: var(--radius-sm);
        font-size: 0.875rem;
        font-family: inherit;
        transition: all 0.15s ease;
        background: var(--gray-900);
        color: var(--gray-100);
    }

    .input-group input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 2px rgba(14, 165, 233, 0.2);
    }

    .input-group input::placeholder {
        color: var(--gray-500);
    }

    .btn-generate {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: var(--radius-sm);
        font-size: 0.85rem;
        font-weight: 600;
        font-family: inherit;
        cursor: pointer;
        transition: all 0.15s ease;
    }

    .btn-generate:hover {
        background: var(--primary-light);
    }

    .btn-generate:active {
        transform: scale(0.98);
    }

    /* Certificate List */
    .cert-list {
        display: flex;
        flex-direction: column;
        gap: 0.375rem;
    }

    .cert-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75rem 0.875rem;
        background: var(--gray-900);
        border-radius: var(--radius-sm);
        border: 1px solid var(--gray-700);
        transition: all 0.15s ease;
    }

    .cert-item:hover {
        border-color: var(--gray-600);
    }

    .cert-info {
        display: flex;
        align-items: center;
        gap: 0.625rem;
        min-width: 0;
    }

    .cert-info i {
        color: var(--accent);
        font-size: 1rem;
        flex-shrink: 0;
    }

    .cert-domain {
        font-weight: 500;
        color: var(--gray-200);
        word-break: break-all;
        font-size: 0.875rem;
    }

    .cert-actions {
        display: flex;
        gap: 0.375rem;
        flex-shrink: 0;
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.375rem 0.625rem;
        border-radius: var(--radius-sm);
        font-size: 0.75rem;
        font-weight: 500;
        font-family: inherit;
        text-decoration: none;
        border: 1px solid transparent;
        cursor: pointer;
        transition: all 0.15s ease;
    }

    .cert-btn {
        background: rgba(14, 165, 233, 0.1);
        color: var(--primary-light);
        border-color: rgba(14, 165, 233, 0.25);
    }

    .cert-btn:hover {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .key-btn {
        background: rgba(245, 158, 11, 0.1);
        color: #fbbf24;
        border-color: rgba(245, 158, 11, 0.25);
    }

    .key-btn:hover {
        background: var(--warning);
        color: var(--gray-900);
        border-color: var(--warning);
    }

    .delete-btn {
        background: transparent;
        color: var(--gray-500);
        border-color: var(--gray-600);
        padding: 0.375rem;
    }

    .delete-btn:hover {
        background: var(--danger);
        color: white;
        border-color: var(--danger);
    }

    .delete-form {
        margin: 0;
        padding: 0;
        display: inline-flex;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 2.5rem 1rem;
        color: var(--gray-500);
    }

    .empty-state i {
        font-size: 2.5rem;
        margin-bottom: 0.875rem;
        opacity: 0.4;
    }

    .empty-state p {
        margin: 0;
        font-size: 0.9rem;
        color: var(--gray-400);
        font-weight: 500;
    }

    .empty-state span {
        display: block;
        margin-top: 0.375rem;
        font-size: 0.8rem;
    }

    /* Responsive */
    @media (max-width: 640px) {
        .form-row {
            flex-direction: column;
            align-items: stretch;
        }

        .input-group {
            max-width: none;
        }

        .btn-generate {
            justify-content: center;
        }

        .cert-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .cert-actions {
            width: 100%;
            justify-content: flex-start;
        }

        .status-card {
            flex-direction: column;
            align-items: flex-start;
        }

        .action-btn span {
            display: none;
        }

        .action-btn {
            padding: 0.375rem;
        }
    }
    </style>
</body>